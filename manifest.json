{
  "name": "CRM ATIVA",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Extens√£o de CRM para integrar com Gmail e contatos do Google.",
  "permissions": ["identity", "activeTab", "scripting", "storage", "tabs"],
  "oauth2": {
    "client_id": "1064862887292-so8jsfp3f4ngrsbatb9pj5oqskcbj899.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/gmail.modify",
      "https://www.googleapis.com/auth/contacts.readonly",
      "https://www.googleapis.com/auth/contacts"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["*://mail.google.com/*"],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "template.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png"
  }
}
